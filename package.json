{
  "name": "iobroker.al-ko",
  "version": "0.3.0",
  "description": "Adapter for communication with AL-KO smart garden devices (Robolinho, mowing windows, operationState, etc.)",
  "author": {
    "name": "Hubert Zechner",
    "email": "hubertiob@posteo.at"
  },
  "homepage": "https://github.com/zechnerhubert/ioBroker.al-ko",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "adapter",
    "al-ko",
    "Robolinho",
    "smart-garden",
    "mower",
    "garden"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zechnerhubert/ioBroker.al-ko.git"
  },
  "bugs": {
    "url": "https://github.com/zechnerhubert/ioBroker.al-ko/issues"
  },
  "engines": {
    "node": ">= 20"
  },
  "main": "main.js",
  "files": [
    "admin/",
    "lib/",
    "www/",
    "io-package.json",
    "main.js",
    "whitelist.json",
    "LICENSE",
    "README.md",
    "docs/"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^1.12.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",

    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",

    "@tsconfig/node20": "^20.1.8",
    "@types/node": "^24.6.1",

    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.48.0",

    "prettier": "^3.7.3",
    "proxyquire": "^2.1.3"
  },
  "readmeFilename": "README.md"
}
