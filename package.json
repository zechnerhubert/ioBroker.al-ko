{
  "name": "iobroker.al-ko",
  "version": "0.2.15",
  "description": "Adapter for communication with Al-Ko garden tools",
  "author": {
    "name": "Hubert Zechner",
    "email": "hubertiob@posteo.at"
  },
  "contributors": [
    {
      "name": "AL-KO"
    }
  ],
  "homepage": "https://github.com/zechnerhubert/ioBroker.al-ko",
  "license": "MIT",
  "keywords": [
    "ioBroker",
    "adapter",
    "al-ko",
    "Robolinho",
    "smart-garden",
    "mower"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zechnerhubert/ioBroker.al-ko.git"
  },
  "bugs": {
    "url": "https://github.com/zechnerhubert/ioBroker.al-ko/issues"
  },
  "engines": {
    "node": ">= 20"
  },
  "main": "main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "lib/",
    "www/",
    "io-package.json",
    "main.js",
    "whitelist.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test:js": "mocha --config test/mocharc.custom.json \"{!(node_modules|test)/**/*.test.js,*.test.js,test/**/test!(PackageFiles|Startup).js}\"",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:js && npm run test:package",
    "check": "tsc --noEmit -p tsconfig.check.json",
    "lint": "eslint main.js lib/ admin/jsonConfig.json --ext .js,.json",
    "lint:fix": "eslint main.js lib/ admin/jsonConfig.json --ext .js,.json --fix",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "axios": "^1.12.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^4.0.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@eslint/js": "^9.39.1",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/db-objects-jsonl": "^7.0.7",
    "@iobroker/db-states-jsonl": "^7.0.7",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.6.1",
    "@types/proxyquire": "^1.3.31",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "proxyquire": "^2.1.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.8.1"
  },
  "readmeFilename": "README.md"
}
